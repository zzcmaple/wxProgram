/* pages/design/design.wxss */
.design_container {
  display: flex;
  align-items: center;
  align-content: center;
  flex-direction: column;
  padding-top: 30rpx;
  background-color: rgba(0, 0, 0, 0.1);
  font-size: 22rpx;
  --width: 550rpx;
}

.design_center {
  width: var(--width);
}

.design_canvas {
  
}

.design_img {
  width: 100%;
  height: calc(var(--width) * 1.3);
  overflow: hidden;
}

.design_img image {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.design_anction {
  width: var(--width);
  display: flex;
  margin-top: 10rpx;
}

.design_anction button {
  width: 100rpx;
  flex: 0.3;
  font-size: 23rpx;
}

.design_info {
  position: relative;
  padding: 20rpx 20rpx;
  background-image: linear-gradient(to bottom,#542624 0%, #8a6c6c 50%, #cbbdbd 100%);
}
.design_info_title {
  position: relative;
  top: 0;
  width: 100%;
  min-height: 100rpx;
  background-color: #411c1b;
}
.design_info_container {
  padding: 40rpx 25rpx 20rpx;
  width: 100%;
  min-height: calc(var(--width) * 0.75);
  position: relative;
  top: -25rpx;
  font-size: 25rpx;
  background:
    radial-gradient(ellipse at top, transparent 16px, #FFFFFF 10px) top,
    radial-gradient(circle at left 70%, transparent 10px, #FFFFFF 10px) left,
    radial-gradient(circle at right 70%, transparent 10px, #FFFFFF 10px) right,
    radial-gradient(circle at bottom, #FFFFFF 10px, #FFFFFF 10px) bottom;
  background-repeat: no-repeat;
  background-size: 100% 50%, 50% 50%, 50% 50%, 100% 30%;
  border-radius: 10px;
}
.design_info_container::after {
  content: '';
  position: absolute;
  top: 60%;
  left: 10px;
  width: calc(100% - 20px);
  height: 2px;
  background-image: linear-gradient(to right, #999999 0%, #999999 50%, transparent 50%);
  background-size: 11px 2px;
  background-repeat: repeat-x;
}

.design_info_title {
  padding: 20rpx 20rpx 30rpx;
  color: #b1a09d;
}
.movie_info_bottom {
  position: absolute;
  top: 70%;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text_center {
  text-align: center;
}